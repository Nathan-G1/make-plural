{
  "name": "make-plural",
  "version": "4.0.0-dev",
  "description": "Translates Unicode CLDR pluralization rules to executable JavaScript",
  "keywords": [
    "unicode",
    "cldr",
    "i18n",
    "internationalization",
    "pluralization"
  ],
  "author": "Eemeli Aro <eemeli@gmail.com>",
  "license": "ISC",
  "homepage": "https://github.com/eemeli/make-plural#readme",
  "repository": "eemeli/make-plural",
  "bugs": {
    "url": "https://github.com/eemeli/make-plural/issues"
  },
  "files": [
    "bin/",
    "data/",
    "es6/",
    "make-plural.*",
    "umd/"
  ],
  "bin": {
    "make-plural": "./bin/make-plural"
  },
  "main": "umd/plurals",
  "scripts": {
    "bin": "npm run bin:common && npm run bin:make-plural",
    "bin:common": "babel src/common.js -d bin/",
    "bin:make-plural": "babel src/cli.js -o bin/make-plural",
    "postbin:make-plural": "chmod a+x bin/make-plural",
    "browserify": "browserify src/make-plural.js -t babelify -s MakePlural -o make-plural.js",
    "browserify:test": "http-server .",
    "prebuild": "npm run data",
    "build": "npm run bin && npm run browserify && npm run es6 && npm run umd",
    "postbuild": "npm run minify && npm run test && npm run lint",
    "clean": "rm -rf bin data es6 make-plural.* umd",
    "predata": "mkdirp data",
    "data": "cp node_modules/cldr-core/supplemental/{plurals,ordinals}.json data/",
    "prees6": "mkdirp es6",
    "es6": "npm run es6:plurals && npm run es6:plural-categories",
    "es6:plurals": "./bin/make-plural --es6 > es6/plurals.js",
    "es6:plural-categories": "./bin/make-plural --es6 --categories > es6/pluralCategories.js",
    "minify:browser": "uglifyjs make-plural.js --compress --mangle -o make-plural.min.js",
    "minify:plurals": "uglifyjs umd/plurals.js --compress --mangle -o umd/plurals.min.js",
    "minify:plural-categories": "uglifyjs umd/pluralCategories.js --compress --mangle -o umd/pluralCategories.min.js",
    "minify": "npm run minify:browser && npm run minify:plurals && npm run minify:plural-categories",
    "preumd": "mkdirp umd",
    "lint": "standard 'src/*.js'",
    "test": "mocha test/code.js test/data.js",
    "umd": "npm run umd:plurals && npm run umd:plural-categories",
    "umd:plurals": "./bin/make-plural > umd/plurals.js",
    "umd:plural-categories": "./bin/make-plural --categories > umd/pluralCategories.js",
    "version": "git add -f $FILES"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "babel-plugin-add-module-exports": "^1.0.2",
    "babelify": "^10.0.0",
    "browserify": "^16.2.3",
    "cldr-core": "^34.0.0",
    "expect.js": "*",
    "http-server": "^0.11.1",
    "mkdirp": "^0.5.1",
    "mocha": "^6.1.4",
    "standard": "^12.0.1",
    "uglify-js": "^3.5.12"
  },
  "optionalDependencies": {
    "minimist": "^1.2.0"
  }
}
