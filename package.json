{
  "name": "make-plural-monorepo",
  "private": true,
  "version": "5.0.0-dev",
  "description": "Monorepo for make-plural packages",
  "author": "Eemeli Aro <eemeli@gmail.com>",
  "license": "ISC",
  "repository": "eemeli/make-plural",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build:cli": "babel --config-file ./.babelrc packages/cli/src/ -d packages/cli/lib",
    "build:compiler": "babel --config-file ./.babelrc packages/compiler/src/ -d packages/compiler/lib",
    "build": "npm run build:compiler && npm run build:cli && lerna run build",
    "lint": "standard 'packages/*/src/*.js'",
    "test": "mocha test/compiler.js test/plural-data.js --reporter progress"
  },
  "dependencies": {
    "make-plural": "file:packages/plurals",
    "make-plural-cli": "file:packages/cli",
    "make-plural-compiler": "file:packages/compiler"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "babel-plugin-add-module-exports": "^1.0.2",
    "cldr-core": "^34.0.0",
    "expect.js": "^0.3.1",
    "lerna": "^3.13.4",
    "mocha": "^6.1.4",
    "standard": "^12.0.1"
  }
}
